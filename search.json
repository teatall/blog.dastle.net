---
---
[
    {% for post in site.posts %}
    {% assign title = post.title | split:' ' %}
    {% assign date = post.date | date_to_long_string | split:' ' %}
    {
        "value": "{{ post.title }}",
        "tokens": [
            {% for word in title %}"{{ word }}",{% endfor %}
            {% for word in date %}"{{ word }}",{% endfor %}
            {% assign abstract = post.abstract | split:&nbsp; %}
            {% for word in abstract %}"{{ word }}",{% endfor %}
            false
            ],
        "date": "{{ post.date | date_to_long_string }}",
        "abstract" : "{{post.abstract | strip_html | strip_newlines | escape }}",
        "url": "{{ post.url }}"
    },
    {% endfor %}
    false
]
